{
	"manifest_version": 3,
	"name": "ChatExt",
	"description": "Upload files to chatGPT, up to 12 at a time. Click or drag and drop files to upload. Download files for generated code.",
	"version": "1.0.0",
	"author": "Bilal Masters",
	"permissions": ["activeTab"],
	"icons": {
		"16": "./assets/icons/icon-16.png",
		"48": "./assets/icons/icon-45.png",
		"128": "./assets/icons/icon-120.png"
	},
	"action": {
		"default_popup": "index.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"web_accessible_resources": [
		{ "resources": ["main.min.js"], "matches": ["<all_urls>"] },
		{ "resources": ["lit-element-d736e2c5.min.js"], "matches": ["<all_urls>"] },
		{ "resources": ["pdf.worker.js"], "matches": ["<all_urls>"] }
	]
}
